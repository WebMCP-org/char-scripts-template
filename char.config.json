{
  "version": 2,
  "script_groups": [
    {
      "group_id": "opentable",
      "name": "OpenTable",
      "tool_prefix": "opentable",
      "scope": {
        "match_patterns": ["https://www.opentable.com/*"],
        "run_at": "document_end"
      },
      "scripts": [
        {
          "name": "restaurant-example",
          "entry": "scripts/restaurant-example/tools.ts",
          "description": "Restaurant reservation tools for OpenTable"
        }
      ]
    },
    {
      "group_id": "thefork_manager",
      "name": "TheFork Manager",
      "tool_prefix": "fork",
      "scope": {
        "match_patterns": ["https://manager.thefork.com/*"],
        "run_at": "document_end"
      },
      "scripts": [
        {
          "name": "graphql",
          "entry": "scripts/thefork-manager/graphql/tools.ts",
          "tool_prefix": "graphql",
          "description": "GraphQL API tool for TheFork Manager (act layer)"
        },
        {
          "name": "verify-booking",
          "entry": "scripts/thefork-manager/verify-booking/tools.ts",
          "tool_prefix": "booking_verify-booking",
          "description": "DOM verification tools for booking pages (verify layer)",
          "scope_override": {
            "match_patterns": ["https://manager.thefork.com/*/booking/*"]
          }
        },
        {
          "name": "verify-service",
          "entry": "scripts/thefork-manager/verify-service/tools.ts",
          "tool_prefix": "service_verify-service",
          "description": "DOM verification tools for service pages (verify layer)",
          "scope_override": {
            "match_patterns": ["https://manager.thefork.com/*/service/*"]
          }
        }
      ]
    },
    {
      "group_id": "ecommerce_shopify",
      "name": "Shopify Ecommerce",
      "tool_prefix": "shop",
      "scope": {
        "match_patterns": ["https://www.taylorstitch.com/*"],
        "run_at": "document_end"
      },
      "scripts": [
        {
          "name": "ecommerce-shopify",
          "entry": "scripts/ecommerce-shopify/tools.ts",
          "description": "DOM-driven ecommerce tools for Shopify stores (select options, add to cart, checkout)"
        }
      ]
    }
  ]
}
